<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.lms.Views.InstructorView"
             Title="InstructorView">
    <VerticalStackLayout>
        <Label 
            Text="Instructor View"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button
            Text="Course Manager"
            Clicked="CourseManagerClicked"/>
        <Button
            Text="Enroll a Student"
            Clicked="EnrollmentClicked"/>
        <Button
            Text="Create a Course"
            Clicked="CourseCreateClicked"/>
        <Button
            Text="Remove a Course"
            Clicked="DeleteCourseClicked"/>
        <Button
            Text="Remove a Student"
            Clicked="DeleteStudentClicked"/>
        <Button
            Text="Cancel"
            Clicked="CancelClicked"
            />
    </VerticalStackLayout>
</ContentPage>  